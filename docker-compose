version: "3.8"

services:
  mysql_db:
    image: mysql:8.0
    container_name: mysqldb-container
    environment:
      MYSQL_ROOT_PASSWORD: root
      MYSQL_DATABASE: demo
    ports:
      - "3306:3306"
    networks:
      - docker-mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 10s
      timeout: 5s
      retries: 5

  application:
    image: springboot-app
    container_name: application-container
    ports:
      - "8080:8080"
    environment:
      SPRING_DATASOURCE_URL: jdbc:mysql://mysql_db:3306/demo?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
      SPRING_DATASOURCE_USERNAME: root
      SPRING_DATASOURCE_PASSWORD: root
    networks:
      - docker-mysql
    depends_on:
      mysql_db:
        condition: service_healthy
    restart: on-failure

networks:
  docker-mysql:
